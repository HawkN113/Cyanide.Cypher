        <repository type="git" url="https://github.com/HawkN113/Cyanide.cypher" branch="main" />
        <projectUrl>https://github.com/HawkN113/Cyanide.cypher</projectUrl>
        <license type="expression">MIT</license>
        <icon>content\cyanide.cypher.ico.png</icon>
        <readme>content\README.md</readme>
        <language>en-GB</language>
